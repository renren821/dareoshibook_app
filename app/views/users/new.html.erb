<% provide(:title, "新規登録") %>

<h3 class="g1-heading">新規登録</h3>
<div class="item-wrap">
  <form class="form-field">
    <div class="input-field">
      <div class="title">お名前</div>
      <div class="block">
        <input class="input js-input" id="name" type="text" name="name" value="">
        <label class="label js-label" for="name">お名前</label>
      </div>
    </div>
    <div class="input-field">
      <div class="title">メールアドレス</div>
      <div class="block">
        <input class="input js-input" id="email" type="text" name="email" value="">
        <label class="label js-label" for="email">メールアドレス</label>
      </div>
    </div>
    <div class="input-field">
      <div class="title">パスワード</div>
      <div class="block">
        <input class="input js-input" id="password" type="password" name="password" value="">
        <label class="label js-label" for="password">パスワード</label>
      </div>
    </div>
    <div class="input-field">
      <div class="title">確認用パスワード</div>
      <div class="block">
        <input class="input js-input" id="confirm_password" type="password" name="confirm_password" value="">
        <label class="label js-label" for="confirm_password">確認用パスワード</label>
      </div>
    </div>
    <button class="m-button" type="submit">
      <div class="content">登録する</div>
    </button>
    <div class="link">
      <%= link_to 'ログインはこちら', '#', class: 'content' %>
    </div>
  </form>
</div>
