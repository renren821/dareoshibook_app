<% provide(:title, "新規登録") %>

<h3 class="g1-heading">新規登録</h3>
<div class="item-wrap">
  <%= form_for @user, url: signup_path, html: { class: 'form-field' } do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="input-field">
      <div class="title">お名前</div>
      <div class="block">
        <%= f.text_field :name, class: 'input js-input' %>
        <label class="label js-label" for="user_name">お名前</label>
      </div>
    </div>
    <div class="input-field">
      <div class="title">メールアドレス</div>
      <div class="block">
        <%= f.email_field :email, class: 'input js-input' %>
        <label class="label js-label" for="user_email">メールアドレス</label>
      </div>
    </div>
    <div class="input-field">
      <div class="title">パスワード</div>
      <div class="block">
        <%= f.password_field :password, class: 'input js-input' %>
        <label class="label js-label" for="user_password">パスワード</label>
      </div>
    </div>
    <div class="input-field">
      <div class="title">確認用パスワード</div>
      <div class="block">
        <%= f.password_field :password_confirmation, class: 'input js-input' %>
        <label class="label js-label" for="user_password_confirmation">確認用パスワード</label>
      </div>
    </div>
    <%= button_tag :type => "submit", class: "m-button" do %>
      <div class="content">登録する</div>
    <% end %>
    <div class="link">
      <%= link_to 'ログインはこちら', login_path, class: 'content' %>
    </div>
  <% end %>
</div>
