<% provide(:title, "パスワードリセット") %>

<h3 class="g1-heading">パスワードリセット</h3>
<div class="item-wrap">
  <%= form_for @user, url: password_reset_path(params[:id]), html: { class: 'form-field' } do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <%= hidden_field_tag :email, @user.email %>
    <div class="input-field">
      <div class="title">パスワード</div>
      <div class="block">
        <%= f.password_field :password, class: 'input js-input' %>
        <label class="label js-label" for="session_password">パスワード</label>
      </div>
    </div>
    <%= button_tag :type => "submit", class: "m-button" do %>
      <div class="content">ログインする</div>
    <% end %>
  <% end %>
</div>